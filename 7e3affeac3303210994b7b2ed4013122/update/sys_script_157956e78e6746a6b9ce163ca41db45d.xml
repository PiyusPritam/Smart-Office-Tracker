        <script><![CDATA[
        try {
            // Calculate session duration when logout_time is set
            if (current.logout_time && current.login_time) {
                var loginTime = new GlideDateTime(current.login_time);
                var logoutTime = new GlideDateTime(current.logout_time);
                
                // Calculate difference in minutes
                var durationMs = logoutTime.getNumericValue() - loginTime.getNumericValue();
                var durationMinutes = Math.round(durationMs / (1000 * 60));
                
                current.setValue('session_duration', durationMinutes);
            }
        } catch (error) {
            gs.error('Error calculating session duration: ' + error.message);
        }
    ]]></script>
